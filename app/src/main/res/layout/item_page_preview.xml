<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.apero.app.poc_ml_docscan.crop.CropImageView
        android:id="@+id/ivPreviewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="12dp"
        app:civLineColor="@color/primary"
        app:civMagnifierCrossColor="@color/primary"
        app:civPointColor="@color/primary"
        app:civPointFillAlpha="100"
        app:civPointFillColor="@color/primary"
        app:civShowEdgeMidPoint="true"
        app:civShowGuideLine="false" />

</FrameLayout>